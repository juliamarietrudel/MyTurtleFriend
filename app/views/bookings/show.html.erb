
<div>
  <br>
  <h2><strong>Congratulations, your booking has been confirmed!</strong></h2><br>
  <h3><strong>Your turtle friend</strong></h3><br>

  <strong>Start Date: <%= @booking.start_date %></strong> | <strong>End Date: <%= @booking.end_date %></strong>

  <h4><strong><%= @booking.turtle.first_name %> <%= @booking.turtle.last_name %></strong></h4>
  <p>Price: <%= @booking.full_price %></p>
  <p><%= @booking.turtle.description %></p>

  <div><br>
      <div class="photo">
        <% if @booking.turtle.photo.attached? %>
          <%= cl_image_tag @turtle.photo.key, height: 300, width: 400, crop: :fill, class: 'turtle-photo'%>
        <% else %>
          <%= image_tag 'cuteturtle.jpg', height: 300, width: 400, crop: :fill, class: 'turtle-photo' %>
        <% end %>
      </div>
  </div>
</div>
