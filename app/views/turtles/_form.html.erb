<%= simple_form_for(turtle) do |f| %>
  <div class="mb-3">
    <%= f.input :first_name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.input :last_name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.input :description, class: 'form-control' %>
  </div>
   <div class="mb-3">
    <%= f.input :price, as: :string, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.input :photo, as: :file, class: 'form-control' %>
  </div>
  <div class="mt-3">
    <%= link_to 'Cancel', turtles_path , class: 'btn btn-danger ms-2' %>
    <%= f.submit class: 'btn nav-btn' %>
  </div>
<% end %>
