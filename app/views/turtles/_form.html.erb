<%= form_for(turtle) do |f| %>
  <div class="mb-3">
    <%= f.label :first_name, class: "form-label" %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :last_name, class: "form-label" %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
   <span class="price"><div class="mb-3">
    <%= f.label :price, class: "form-label" %>
    <%= f.text_field :price, class: 'form-control' %>
  </div></span>
  <div class="mb-3">
    <%= f.label :picture_url, class: "form-label" %>
    <%= f.text_field :picture_url, class: 'form-control' %>
  </div>
  <div class="mt-3">
    <%= link_to 'Cancel', turtles_path , class: 'btn btn-danger ms-2' %>
    <%= f.submit class: 'btn nav-btn' %>
  </div>
<% end %>
